-#  This file is app/views/movies/index.html.haml
%h1 All Movies

%table#movies
  %thead
    %tr
      %th{:id => 'title_header', :class => selected_column('title asc')}= link_to 'Title', :sort => 'title asc', :id => 'title_header'
      %th Rating
      %th{:id => 'release_date_header', :class => selected_column('release_date')}= link_to 'Release date', :sort => 'release_date', :id => 'release_date_header'
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
